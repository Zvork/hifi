// the texture
uniform sampler2D colorMap;

in vec3 varPosition;
in vec3 varNormal;
in vec2 varTexCoord0;
in vec4 varColor;

out vec4 outFragColor;

void main(void) {
    vec4 color = texture(colorMap, varTexCoord0);
    outFragColor = color * varColor;
}
